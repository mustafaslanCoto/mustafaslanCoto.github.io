        "\n",
        "# Convert to a DataFrame\n",
        "import pandas as pd\n",
        "df = pd.DataFrame(data).sort_values(by = \"Values\", ascending=False)\n",
        "\n",
        "# Create a bar plot\n",
        "sns.barplot(x=\"Category\", y=\"Values\", data=df, palette=\"viridis\")\n",
